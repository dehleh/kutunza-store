# Environment variables for Kutunza POS
# Copy this file to .env and fill in your values

# Database
DB_USER=kutunza
DB_PASSWORD=your_secure_password_here
DB_NAME=kutunza_pos

# Sync Server
JWT_SECRET=your_super_secret_jwt_key_min_32_chars_change_this_in_production
API_KEY=your_api_key_for_pos_terminals
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
LOG_LEVEL=info

# Frontend URLs
VITE_API_URL=http://localhost:5000
VITE_WS_URL=ws://localhost:5000

# Production Settings (uncomment for production)
# NODE_ENV=production
# ALLOWED_ORIGINS=https://pos.yourdomain.com,https://display.yourdomain.com,https://admin.yourdomain.com
# VITE_API_URL=https://api.yourdomain.com
# VITE_WS_URL=wss://api.yourdomain.com
