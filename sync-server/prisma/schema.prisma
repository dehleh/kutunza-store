// Prisma schema for cloud sync server (PostgreSQL)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== MULTI-TENANCY ====================

// Company/Organization (Top-level tenant)
model Company {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique // URL-friendly identifier
  email       String   @unique
  phone       String?
  address     String?
  logo        String?
  website     String?
  taxId       String?  // VAT/Tax registration number
  
  // Subscription
  plan        String   @default("trial") // trial, basic, pro, enterprise
  status      String   @default("active") // active, suspended, cancelled
  maxStores   Int      @default(1)
  maxUsers    Int      @default(5)
  
  // Billing
  billingEmail    String?
  billingAddress  String?
  
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  stores         Store[]
  platformAdmins PlatformAdmin[]
  subscriptions  Subscription[]
  
  @@index([slug])
  @@index([email])
}

// Platform administrators (can manage multiple companies)
model PlatformAdmin {
  id          String   @id @default(uuid())
  companyId   String?  // null = super admin (manages all companies)
  company     Company? @relation(fields: [companyId], references: [id])
  
  email       String   @unique
  password    String   // bcrypt hashed
  firstName   String
  lastName    String
  role        String   @default("company_admin") // super_admin, company_admin
  refreshTokenHash      String?
  refreshTokenExpiresAt DateTime?
  
  // Permissions
  canManageCompanies Boolean @default(false)
  canManageBilling   Boolean @default(false)
  canViewAllStores   Boolean @default(false)
  
  isActive    Boolean  @default(true)
  lastLoginAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([email])
  @@index([companyId])
}

// Subscription tracking
model Subscription {
  id              String   @id @default(uuid())
  companyId       String
  company         Company  @relation(fields: [companyId], references: [id])
  
  plan            String   // trial, basic, pro, enterprise
  status          String   @default("active") // active, past_due, cancelled, expired
  
  // Billing cycle
  billingCycle    String   @default("monthly") // monthly, yearly
  amount          Float
  currency        String   @default("USD")
  
  // Period
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  trialEndsAt        DateTime?
  cancelAt           DateTime?
  canceledAt         DateTime?
  
  // Payment
  paymentMethod   String?  // stripe, paypal, manual
  paymentReference String? // external payment ID
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([companyId])
  @@index([status])
}

// Store/Location (now belongs to a company)
model Store {
  id        String   @id @default(uuid())
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  
  name      String
  code      String?  // Internal store code
  address   String?
  phone     String?
  email     String?
  timezone  String   @default("UTC")
  currency  String   @default("USD")
  
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products       Product[]
  categories     Category[]
  sales          Sale[]
  customers      Customer[]
  users          User[]
  settings       Setting[]
  stockMovements StockMovement[]
  
  @@unique([companyId, code])
  @@index([companyId])
}

model Product {
  id            String   @id
  storeId       String
  store         Store    @relation(fields: [storeId], references: [id])
  sku           String
  barcode       String?
  name          String
  description   String?
  categoryId    String
  costPrice     Float    @default(0)
  sellingPrice  Float
  taxRate       Float    @default(0)
  trackStock    Boolean  @default(true)
  stockQuantity Int      @default(0)
  lowStockAlert Int      @default(10)
  unit          String   @default("pcs")
  imageUrl      String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  saleItems      SaleItem[]
  stockMovements StockMovement[]

  @@unique([storeId, sku])
}

model Category {
  id          String   @id
  storeId     String
  store       Store    @relation(fields: [storeId], references: [id])
  name        String
  description String?
  color       String   @default("#8B4513")
  icon        String?
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Customer {
  id            String   @id
  storeId       String
  store         Store    @relation(fields: [storeId], references: [id])
  name          String
  phone         String?
  email         String?
  address       String?
  loyaltyPoints Int      @default(0)
  totalSpent    Float    @default(0)
  visitCount    Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sales Sale[]

  @@unique([storeId, phone])
}

model User {
  id        String   @id
  storeId   String
  store     Store    @relation(fields: [storeId], references: [id])
  username  String
  pin       String
  password  String
  firstName String
  lastName  String
  role      String   @default("cashier")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sales Sale[]

  @@unique([storeId, username])
}

model Sale {
  id             String   @id
  storeId        String
  store          Store    @relation(fields: [storeId], references: [id])
  receiptNo      String   @unique
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  sessionId      String
  customerId     String?
  customer       Customer? @relation(fields: [customerId], references: [id])
  subtotal       Float
  taxAmount      Float    @default(0)
  discountAmount Float    @default(0)
  discountType   String?
  totalAmount    Float
  paymentMethod  String
  amountPaid     Float
  changeGiven    Float    @default(0)
  status         String   @default("completed")
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  items    SaleItem[]
  payments Payment[]
}

model SaleItem {
  id          String  @id
  saleId      String
  sale        Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  productId   String
  product     Product @relation(fields: [productId], references: [id])
  productName String
  quantity    Int
  unitPrice   Float
  costPrice   Float
  taxRate     Float   @default(0)
  taxAmount   Float   @default(0)
  discount    Float   @default(0)
  total       Float
  modifiers   String?
  notes       String?
}

model Payment {
  id        String   @id
  saleId    String
  sale      Sale     @relation(fields: [saleId], references: [id], onDelete: Cascade)
  method    String
  amount    Float
  reference String?
  createdAt DateTime @default(now())
}

model StockMovement {
  id          String   @id @default(uuid())
  storeId     String
  store       Store    @relation(fields: [storeId], references: [id])
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  userId      String
  type        String
  quantity    Int
  previousQty Int
  newQty      Int
  reason      String?
  reference   String?
  createdAt   DateTime @default(now())
}

model Setting {
  id        String   @id
  storeId   String
  store     Store    @relation(fields: [storeId], references: [id])
  key       String
  value     String
  type      String   @default("string")
  category  String   @default("general")
  updatedAt DateTime @updatedAt

  @@unique([storeId, key])
}

model SyncLog {
  id          String   @id @default(uuid())
  syncId      String   @unique
  storeId     String
  tableName   String
  recordId    String
  operation   String
  processedAt DateTime @default(now())

  @@index([storeId, processedAt])
}

// Audit Log for compliance and security tracking
model AuditLog {
  id         String   @id @default(uuid())
  storeId    String
  userId     String
  action     String   // CREATE, UPDATE, DELETE, VOID, DISCOUNT, etc.
  entityType String   // Product, Sale, User, Inventory, etc.
  entityId   String
  changes    Json?    // Before/After values
  ipAddress  String?
  userAgent  String?
  metadata   Json?    // Additional context
  createdAt  DateTime @default(now())

  @@index([storeId, createdAt])
  @@index([userId, createdAt])
  @@index([entityType, entityId])
}
